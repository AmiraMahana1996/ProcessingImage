head
  meta(charset='utf-8')
  title Title2
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')

  body

    .modal-dialog
        .modal-content
          // Modal Header
          .modal-header
            h4#myModalLabel.modal-title
              | Add Image
          // Modal Body
          .modal-body
            form(role='form' method='POST' action='resize-img')
              div.form-group
                label(for='name') Image Name:
                input#name.form-control(type='text', name='name')
              div.form-group
                label(for='width') Image Width:
                input#name.form-control(type='text', name='width')
              div.form-group
                label(for='height') Image Height:
                input#name.form-control(type='text', name='height')
              button.btn.btn-primary(type="submit") Submit
 
 


